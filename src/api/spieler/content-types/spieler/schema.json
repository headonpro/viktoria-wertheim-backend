{
  "kind": "collectionType",
  "collectionName": "spieler",
  "info": {
    "singularName": "spieler",
    "pluralName": "spielers",
    "displayName": "Spieler",
    "description": "Vereinsspieler mit Statistiken und Team-Zugeh√∂rigkeit"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "mitglied": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::mitglied.mitglied"
    },
    "mannschaft": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::mannschaft.mannschaft"
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "torwart",
        "abwehr",
        "mittelfeld",
        "sturm"
      ],
      "required": true
    },
    "rueckennummer": {
      "type": "integer",
      "min": 1,
      "max": 99,
      "unique": false
    },
    "tore_saison": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "spiele_saison": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "gelbe_karten": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "rote_karten": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "vertragsende": {
      "type": "date"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "aktiv",
        "verletzt",
        "gesperrt",
        "pausiert",
        "inaktiv"
      ],
      "default": "aktiv"
    },
    "hauptposition": {
      "type": "enumeration",
      "enum": [
        "torwart",
        "innenverteidiger",
        "aussenverteidiger",
        "defensives_mittelfeld",
        "zentrales_mittelfeld", 
        "offensives_mittelfeld",
        "fluegelstuermer",
        "mittelstuermer"
      ]
    },
    "staerken": {
      "type": "text"
    },
    "verletzungshistorie": {
      "type": "text"
    },
    "bemerkungen": {
      "type": "text"
    },
    "einsatzminuten": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "assists": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "kapitaen": {
      "type": "boolean",
      "default": false
    },
    "vizekapitaen": {
      "type": "boolean",
      "default": false
    },
    "spielerfoto": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
} 