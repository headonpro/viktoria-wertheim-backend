{
  "kind": "collectionType",
  "collectionName": "spieler",
  "info": {
    "singularName": "spieler",
    "pluralName": "spielers",
    "displayName": "Spieler",
    "description": "Spieler der Mannschaften"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "vorname": {
      "type": "string",
      "required": true
    },
    "nachname": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "Torwart",
        "Abwehr",
        "Mittelfeld",
        "Sturm"
      ],
      "required": true
    },
    "foto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "mannschaft": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::mannschaft.mannschaft",
      "inversedBy": "spieler"
    }
  }
} 