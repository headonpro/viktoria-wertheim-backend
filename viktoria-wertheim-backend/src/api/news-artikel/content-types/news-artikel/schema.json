{
  "kind": "collectionType",
  "collectionName": "news_artikel",
  "info": {
    "singularName": "news-artikel",
    "pluralName": "news-artikels",
    "displayName": "News-Artikel",
    "description": "Nachrichten und Artikel des Vereins"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titel": {
      "type": "string",
      "required": true
    },
    "inhalt": {
      "type": "richtext",
      "required": true
    },
    "titelbild": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "datum": {
      "type": "date",
      "required": true
    },
    "kategorie": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::kategorie.kategorie",
      "inversedBy": "newsArtikel"
    }
  }
} 