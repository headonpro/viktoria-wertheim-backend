# Tabellen-Automatisierung Environment Configuration

# Queue Configuration
AUTOMATION_QUEUE_ENABLED=true
AUTOMATION_QUEUE_CONCURRENCY=3
AUTOMATION_QUEUE_MAX_RETRIES=3
AUTOMATION_QUEUE_TIMEOUT=30000

# Cache Configuration
AUTOMATION_CACHE_ENABLED=true
AUTOMATION_CACHE_PROVIDER=memory
AUTOMATION_CACHE_TTL_TABLE_DATA=300
AUTOMATION_CACHE_TTL_TEAM_STATS=600

# Redis Configuration (if using Redis cache)
AUTOMATION_REDIS_HOST=localhost
AUTOMATION_REDIS_PORT=6379
AUTOMATION_REDIS_PASSWORD=
AUTOMATION_REDIS_DB=0

# Calculation Configuration
AUTOMATION_CALCULATION_TIMEOUT=30000
AUTOMATION_CREATE_SNAPSHOTS=true
AUTOMATION_VALIDATE_RESULTS=true

# Snapshot Configuration
AUTOMATION_SNAPSHOT_ENABLED=true
AUTOMATION_SNAPSHOT_MAX_COUNT=50
AUTOMATION_SNAPSHOT_MAX_AGE_DAYS=30
AUTOMATION_SNAPSHOT_COMPRESSION=true
AUTOMATION_SNAPSHOT_DIRECTORY=./snapshots

# Monitoring Configuration
AUTOMATION_MONITORING_ENABLED=true
AUTOMATION_METRICS_COLLECTION=true
AUTOMATION_LOG_LEVEL=info
AUTOMATION_STRUCTURED_LOGGING=true

# Feature Flags
AUTOMATION_FEATURE_AUTOMATIC_CALCULATION=true
AUTOMATION_FEATURE_QUEUE_PROCESSING=true
AUTOMATION_FEATURE_SNAPSHOT_CREATION=true
AUTOMATION_FEATURE_ADMIN_EXTENSIONS=true
AUTOMATION_FEATURE_PERFORMANCE_MONITORING=true
AUTOMATION_FEATURE_CACHING=true

# Error Handling
AUTOMATION_ERROR_MAX_RETRIES=3
AUTOMATION_ERROR_BACKOFF_TYPE=exponential
AUTOMATION_ERROR_BASE_DELAY=1000
AUTOMATION_ERROR_MAX_DELAY=30000

# Notifications (optional)
AUTOMATION_NOTIFICATIONS_ENABLED=false
AUTOMATION_EMAIL_ENABLED=false
AUTOMATION_SLACK_ENABLED=false
AUTOMATION_WEBHOOK_ENABLED=false