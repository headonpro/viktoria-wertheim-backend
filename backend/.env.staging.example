# Staging Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=staging

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=staging-db.example.com
DATABASE_PORT=5432
DATABASE_NAME=viktoria_staging
DATABASE_USERNAME=strapi_staging
DATABASE_PASSWORD=staging-secure-password
DATABASE_SSL=true
DATABASE_SCHEMA=public
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Admin Configuration
ADMIN_JWT_SECRET=staging-admin-jwt-secret-key
APP_KEYS=staging-key1,staging-key2,staging-key3,staging-key4

# API Configuration
API_TOKEN_SALT=staging-api-token-salt
JWT_SECRET=staging-jwt-secret

# Frontend Configuration
FRONTEND_URL=https://staging.viktoria-wertheim.de

# Automation Configuration
ENABLE_AUTO_CALCULATION=true
ENABLE_QUEUE=true
ENABLE_ADMIN_EXT=true

# Redis Configuration (Staging uses Redis for caching)
CACHE_PROVIDER=redis
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=redis-password
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/strapi-staging.log
SYSLOG_HOST=logs.example.com
SYSLOG_PORT=514

# Deployment Configuration
BLUE_PORT=1337
GREEN_PORT=1338
PROXY_PORT=1339

# Backup Configuration
BACKUP_DIR=./backups/staging

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_PORT=9090

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ADMIN_EMAIL=admin@viktoria-wertheim.de

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@viktoria-wertheim.de
SMTP_PASSWORD=smtp-password