{
  "kind": "collectionType",
  "collectionName": "clubs",
  "info": {
    "singularName": "club",
    "pluralName": "clubs",
    "displayName": "Club",
    "description": "Football clubs with logos, contact information and league table data"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "kurz_name": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "vereinsfarben": {
      "type": "string",
      "maxLength": 50
    },
    "heimstadion": {
      "type": "string",
      "maxLength": 100
    },
    "adresse": {
      "type": "text"
    },
    "website": {
      "type": "string",
      "maxLength": 255
    },
    "kontakt": {
      "type": "string",
      "maxLength": 100
    },
    "ist_unser_verein": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "liga": {
      "type": "string",
      "maxLength": 100,
      "default": "Kreisliga Tauberbischofsheim"
    },
    "platz": {
      "type": "integer",
      "min": 1,
      "default": 1
    },
    "spiele": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "siege": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "unentschieden": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "niederlagen": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "tore_fuer": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "tore_gegen": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "tordifferenz": {
      "type": "integer",
      "default": 0
    },
    "punkte": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "teams": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::team.team",
      "mappedBy": "club"
    },
    "ligas": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::liga.liga",
      "mappedBy": "clubs"
    },

    "tabellen_eintraege": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tabellen-eintrag.tabellen-eintrag",
      "mappedBy": "club"
    },
    "next_game_cards": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::next-game-card.next-game-card",
      "mappedBy": "gegner_club"
    }
  }
}