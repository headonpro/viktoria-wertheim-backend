{
  "kind": "collectionType",
  "collectionName": "mannschaften",
  "info": {
    "singularName": "mannschaft",
    "pluralName": "mannschaften",
    "displayName": "Mannschaft",
    "description": "Teams des Vereins"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "display_name": {
      "type": "string"
    },
    "liga": {
      "type": "string",
      "required": true
    },
    "liga_vollname": {
      "type": "string"
    },
    "trainer": {
      "type": "string"
    },
    "co_trainer": {
      "type": "string"
    },
    "trainingszeiten": {
      "type": "text"
    },
    "heimspieltag": {
      "type": "string"
    },
    "altersklasse": {
      "type": "string"
    },
    "teamfoto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },

    "tabellenplatz": {
      "type": "integer"
    },
    "punkte": {
      "type": "integer",
      "default": 0
    },
    "spiele_gesamt": {
      "type": "integer",
      "default": 0
    },
    "siege": {
      "type": "integer",
      "default": 0
    },
    "unentschieden": {
      "type": "integer",
      "default": 0
    },
    "niederlagen": {
      "type": "integer",
      "default": 0
    },
    "tore_fuer": {
      "type": "integer",
      "default": 0
    },
    "tore_gegen": {
      "type": "integer",
      "default": 0
    },
    "tordifferenz": {
      "type": "integer",
      "default": 0
    },
    "form_letzte_5": {
      "type": "json",
      "default": []
    },
    "trend": {
      "type": "enumeration",
      "enum": ["steigend", "gleich", "fallend"],
      "default": "gleich"
    },
    "status": {
      "type": "enumeration",
      "enum": ["aktiv", "inaktiv", "pausiert"],
      "default": "aktiv"
    },
    "spieler": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::spieler.spieler",
      "mappedBy": "mannschaft"
    },
    "spiele": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::spiel.spiel",
      "mappedBy": "unsere_mannschaft"
    }
  }
}