{
  "kind": "collectionType",
  "collectionName": "spieler",
  "info": {
    "singularName": "spieler",
    "pluralName": "spielers",
    "displayName": "Spieler",
    "description": "Spieler des Vereins mit flexiblen Team-Zuordnungen"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "vorname": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "nachname": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "mitglied": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::mitglied.mitglied",
      "inversedBy": "spieler"
    },
    "hauptteam": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team",
      "inversedBy": "spieler"
    },
    "aushilfe_teams": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::team.team",
      "inversedBy": "aushilfe_spieler"
    },
    "position": {
      "type": "enumeration",
      "enum": ["Torwart", "Abwehr", "Mittelfeld", "Sturm"],
      "required": false
    },
    "rueckennummer": {
      "type": "integer",
      "min": 1,
      "max": 99
    },
    "status": {
      "type": "enumeration",
      "enum": ["aktiv", "verletzt", "gesperrt"],
      "default": "aktiv",
      "required": true
    },
    "kapitaen": {
      "type": "boolean",
      "default": false
    },
    "spielerfoto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}