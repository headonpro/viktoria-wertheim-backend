{
  "kind": "collectionType",
  "collectionName": "news_artikel",
  "info": {
    "singularName": "news-artikel",
    "pluralName": "news-artikels",
    "displayName": "News-Artikel",
    "description": "News-Artikel des Vereins"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titel": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "inhalt": {
      "type": "richtext",
      "required": true
    },
    "datum": {
      "type": "datetime",
      "required": true
    },
    "autor": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "titelbild": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "uid",
      "targetField": "titel",
      "required": true
    }
  }
}
